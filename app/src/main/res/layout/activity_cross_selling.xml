<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true">

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >


        <!-- ..............pesquisa............... -->


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="42dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp" >

            <com.skydoves.powerspinner.PowerSpinnerView
                android:id="@+id/spnr_area_recomendacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:hint="@string/areaRecomendacao"
                android:padding="10dp"
                android:textSize="14.5sp"
                app:spinner_arrow_gravity="end"
                app:spinner_arrow_padding="8dp"
                app:spinner_divider_show="true"
                app:spinner_divider_size="0.4dp"
                app:spinner_popup_animation="dropdown"
                app:spinner_popup_elevation="14dp" />


            <TextView android:id="@+id/txt_sinaletica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:text="@string/lorem_ipsum_titulo"
                android:layout_marginLeft="15dp" />



        </LinearLayout>


        <!-- ..............cabecalho............... -->


        <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/produtos"
            android:textColor="@color/whiteCardColor"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@color/cor_tabelas__" />


        <!-- ..............lista............... -->

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcl_registos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>




    </LinearLayout>
</LinearLayout>