<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">



    <data>

        <import type="com.vvm.sh.BuildConfig"/>
        <import type="com.vvm.sh.util.metodos.StringUtil"/>
        <import type="android.view.View"/>

        <variable
            name="questao"
            type="com.vvm.sh.ui.atividadesPendentes.relatorios.checklist.modelos.Questao"/>


        <variable
            name="bloquear"
            type="Boolean"/>
    </data>



    <androidx.cardview.widget.CardView
        style="@style/cartao">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout android:id="@+id/lnr_ut"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="6dp">


                <LinearLayout android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <TextView android:id="@+id/txt_view_id_item"
                        style="@style/textoDetalhe"
                        android:text="@{questao.registo.uid}"/>

                </LinearLayout>









                <LinearLayout android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >



                    <LinearLayout android:id="@+id/lnr_ut_1"
                        android:layout_width="600dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">



                        <!-- ............... UT 1...................... -->

                        <LinearLayout android:layout_width="fill_parent"
                            android:layout_height="42dp"
                            android:orientation="horizontal"
                            android:background="@color/cor_separador"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical" >


                            <TextView android:text="@string/ut1"
                                style="@style/txt_rotulo"
                                android:layout_width="wrap_content"
                                android:paddingLeft="20dp"
                                android:layout_height="wrap_content" />


                        </LinearLayout>


                        <!-- ............... ut ...................... -->


                        <LinearLayout android:layout_width="fill_parent"
                            android:layout_height="42dp"
                            android:orientation="horizontal"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical">


                            <TextView android:text="@string/ut_"
                                style="@style/txt_rotulo"
                                android:layout_width="50dp"
                                android:paddingLeft="20dp"
                                android:layout_height="wrap_content"  />

                            <TextView android:id="@+id/txt_view_ut_1"
                                style="@style/txt_texto"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="1dp"/>

                        </LinearLayout>


                        <!-- ................ categorias de risco ...................... -->

                        <LinearLayout android:layout_width="fill_parent"
                            android:layout_height="42dp"
                            android:orientation="horizontal"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical" >

                            <TextView android:text="@string/categoriasRisco_"
                                style="@style/txt_rotulo"
                                android:layout_width="140dp"
                                android:paddingLeft="20dp"
                                android:layout_height="wrap_content" />


                            <TextView android:id="@+id/txt_view_categoria_risco_1"
                                style="@style/txt_texto"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="1dp"/>

                        </LinearLayout>


                        <!-- ................ locais de risco ...................... -->


                        <LinearLayout android:layout_width="fill_parent"
                            android:layout_height="42dp"
                            android:orientation="horizontal"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical" >

                            <TextView android:text="@string/locaisRisco_"
                                style="@style/txt_rotulo"
                                android:layout_width="140dp"
                                android:paddingLeft="20dp"
                                android:layout_height="wrap_content" />


                            <TextView android:id="@+id/txt_view_locais_risco_1"
                                style="@style/txt_texto"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="1dp"/>

                        </LinearLayout>


                        <LinearLayout android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView android:text="@string/cargaTermica_"
                                style="@style/txt_rotulo"
                                android:layout_width="160dip"
                                android:paddingLeft="20dp"
                                android:layout_height="wrap_content" />

                            <TextView android:id="@+id/txt_view_locais_carga_termica"
                                style="@style/txt_texto"
                                android:layout_marginLeft="12dp"/>

                        </LinearLayout>

                    </LinearLayout>


                    <at.markushi.ui.CircleButton
                        android:id="@+id/crl_btn_calendario"
                        style="@style/btnCalendario"
                        android:layout_marginEnd="1dp" />


                </LinearLayout>










                <LinearLayout android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >



                    <LinearLayout android:id="@+id/lnr_ut_2"
                        android:layout_width="600dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">



                        <!-- ............... UT 2...................... -->

                        <LinearLayout android:layout_width="fill_parent"
                            android:layout_height="42dp"
                            android:orientation="horizontal"
                            android:background="@color/cor_separador"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical" >


                            <TextView android:text="@string/ut2"
                                style="@style/txt_rotulo"
                                android:layout_width="wrap_content"
                                android:paddingLeft="20dp"
                                android:layout_height="wrap_content" />


                        </LinearLayout>


                        <!-- ............... ut ...................... -->


                        <LinearLayout android:layout_width="fill_parent"
                            android:layout_height="42dp"
                            android:orientation="horizontal"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical">


                            <TextView android:text="@string/ut_"
                                style="@style/txt_rotulo"
                                android:layout_width="50dp"
                                android:paddingLeft="20dp"
                                android:layout_height="wrap_content"  />

                            <TextView android:id="@+id/txt_view_ut_2"
                                style="@style/txt_texto"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="1dp"/>

                        </LinearLayout>


                        <!-- ................ categorias de risco ...................... -->

                        <LinearLayout android:layout_width="fill_parent"
                            android:layout_height="42dp"
                            android:orientation="horizontal"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical" >

                            <TextView android:text="@string/categoriasRisco_"
                                style="@style/txt_rotulo"
                                android:layout_width="140dp"
                                android:paddingLeft="20dp"
                                android:layout_height="wrap_content" />


                            <TextView android:id="@+id/txt_view_categoria_risco_2"
                                style="@style/txt_texto"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="1dp"/>

                        </LinearLayout>


                        <!-- ................ locais de risco ...................... -->


                        <LinearLayout android:layout_width="fill_parent"
                            android:layout_height="42dp"
                            android:orientation="horizontal"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical" >

                            <TextView android:text="@string/locaisRisco_"
                                style="@style/txt_rotulo"
                                android:layout_width="140dp"
                                android:paddingLeft="20dp"
                                android:layout_height="wrap_content" />


                            <TextView android:id="@+id/txt_view_locais_risco_2"
                                style="@style/txt_texto"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="1dp"/>

                        </LinearLayout>



                    </LinearLayout>


                    <at.markushi.ui.CircleButton
                        android:id="@+id/crl_btn_calendario_"
                        style="@style/btnCalendario"
                        android:layout_marginEnd="1dp" />


                </LinearLayout>






            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</layout>