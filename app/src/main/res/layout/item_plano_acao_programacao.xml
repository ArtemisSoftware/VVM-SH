<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <data>

        <import type="com.vvm.sh.util.metodos.DatasUtil"/>

        <variable
            name="atividade"
            type="com.vvm.sh.ui.planoAccao.modelo.AtividadeRegisto" />

        <variable
            name="ano"
            type="Integer" />

    </data>



    <androidx.cardview.widget.CardView
        style="@style/cartao">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linearLayout19"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <TextView
                    style="@style/textoDetalhe"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="@{atividade.atividade.descricao, default=descricao}"
                    android:textSize="12sp" />


                <TextView
                    style="@style/textoDetalhe"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="2dp"
                    android:gravity="center_vertical"
                    android:text="@{atividade.atividade.anuidade, default=anuidade}" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/lnr_marcacoes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/linearLayout19"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/linearLayout19"
                app:layout_constraintTop_toTopOf="@+id/linearLayout19">


                <TextView
                    android:id="@+id/txt1"
                    atividadePlano="@{atividade}"
                    ano="@{ano}"
                    mes="@{1}"
                    android:layout_width="35dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dp"
                    android:background="@color/cor_omissao"
                    android:text="Jan"
                    style="@style/textoData"/>

                <TextView
                    android:id="@+id/txt2"
                    atividadePlano="@{atividade}"
                    ano="@{ano}"
                    mes="@{2}"
                    android:layout_width="35dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dp"
                    android:background="@color/cor_omissao"
                    android:text="Fev"
                    style="@style/textoData"/>

                <TextView
                    android:id="@+id/txt3"
                    atividadePlano="@{atividade}"
                    ano="@{ano}"
                    mes="@{3}"
                    android:layout_width="35dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dp"
                    android:background="@color/cor_omissao"
                    android:text="Mar"
                    style="@style/textoData" />


                <TextView
                    android:id="@+id/txt4"
                    atividadePlano="@{atividade}"
                    ano="@{ano}"
                    mes="@{4}"
                    android:layout_width="35dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dp"
                    android:background="@color/cor_omissao"
                    android:text="Abr"
                    style="@style/textoData" />

                <TextView
                    android:id="@+id/txt5"
                    atividadePlano="@{atividade}"
                    ano="@{ano}"
                    mes="@{5}"
                    android:layout_width="35dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dp"
                    android:background="@color/cor_omissao"
                    android:text="Mai"
                    style="@style/textoData" />

                <TextView
                    android:id="@+id/txt6"
                    atividadePlano="@{atividade}"
                    ano="@{ano}"
                    mes="@{6}"
                    android:layout_width="35dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dp"
                    android:background="@color/cor_omissao"
                    android:text="Jun"
                    style="@style/textoData" />


                <TextView
                    android:id="@+id/txt7"
                    atividadePlano="@{atividade}"
                    ano="@{ano}"
                    mes="@{7}"
                    android:layout_width="35dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dp"
                    android:background="@color/cor_omissao"
                    android:text="Jul"
                    style="@style/textoData" />

                <TextView
                    android:id="@+id/txt8"
                    atividadePlano="@{atividade}"
                    ano="@{ano}"
                    mes="@{8}"
                    android:layout_width="35dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dp"
                    android:background="@color/cor_omissao"
                    android:text="Ago"
                    style="@style/textoData" />

                <TextView
                    android:id="@+id/txt9"
                    atividadePlano="@{atividade}"
                    ano="@{ano}"
                    mes="@{9}"
                    android:layout_width="35dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dp"
                    android:background="@color/cor_omissao"
                    android:text="Set"
                    style="@style/textoData" />


                <TextView
                    android:id="@+id/txt10"
                    atividadePlano="@{atividade}"
                    ano="@{ano}"
                    mes="@{10}"
                    android:layout_width="35dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dp"
                    android:background="@color/cor_omissao"
                    android:text="Out"
                    style="@style/textoData" />

                <TextView
                    android:id="@+id/txt11"
                    atividadePlano="@{atividade}"
                    ano="@{ano}"
                    mes="@{11}"
                    android:layout_width="35dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dp"
                    android:background="@color/cor_omissao"
                    android:text="Nov"
                    style="@style/textoData" />

                <TextView
                    android:id="@+id/txt12"
                    atividadePlano="@{atividade}"
                    ano="@{ano}"
                    mes="@{12}"
                    android:layout_width="35dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dp"
                    android:background="@color/cor_omissao"
                    android:text="Dez"
                    style="@style/textoData" />


            </LinearLayout>




        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>