<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="java.util.List"/>
        <import type="com.vvm.sh.util.metodos.StringUtil"/>
        <!--
                <variable
                    name="listener"
                    type="com.vvm.sh.ui.ocorrencias.adaptadores.OnOcorrenciaListener"/>
        -->

        <variable
            name="viewmodel"
            type="com.vvm.sh.ui.atividadesPendentes.relatorios.levantamentos.LevantamentosViewModel"/>


        <variable
            name="bloquear"
            type="Boolean"/>


    </data>




    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/appbar_layout_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">

            <!-- android:visibility="@{viewmodel.agenda.marcacaos.size() == 0 ? View.VISIBLE : View.GONE}"  -->

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/ic_sem_trabalho"
                android:tint="@color/cor_alerta_medio"/>

            <TextView
                style="@style/textoDetalhe"
                android:text="@string/registos_inexistentes"
                android:layout_marginTop="32dp"/>


        </LinearLayout>





        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcl_registos"
            style="@style/lista"
            android:visibility="gone"

            tools:listitem="@layout/item_levantamento"/>

        <!--
        android:visibility="@{viewmodel.agenda.marcacaos.size() > 0 ? View.VISIBLE : View.GONE}"
        ocorrencias="@{viewmodel.ocorrencias}"
                            listener="@{listener}"
        -->




        <LinearLayout
            android:id="@+id/lnr_lyt_levantamento"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txt_descricao"
                style="@style/textoNota"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:layout_marginLeft="16dp"
                android:drawableLeft="@drawable/ic_seta_esquerda_24dp"
                android:text="@string/listagem_levantamentos"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textview"
                app:layout_constraintTop_toBottomOf="@+id/spnr_ocorrencias" />



            <androidx.cardview.widget.CardView
                android:id="@+id/card_detalhe"
                style="@style/cartao">

                <!-- android:onClick="@{() -> listener.showNoteDialog(note) }" -->


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/textView20"
                        style="@style/tituloCartao"
                        android:text="@string/levantamento_numero_"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>


                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip"
                        android:layout_marginTop="@dimen/distancia_vertical_titulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        completudeRelatorio="@{viewmodel.relatorio.valido}"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/textView20"
                        app:layout_constraintTop_toBottomOf="@+id/textView20" />

                    <TextView
                        android:id="@+id/textView59"
                        style="@style/textoDetalhe"
                        android:layout_marginStart="16dp"
                        android:text="@{StringUtil.converterString(viewmodel.relatorio.id)}"
                        app:layout_constraintBottom_toBottomOf="@+id/textView20"
                        app:layout_constraintStart_toEndOf="@+id/textView20"
                        app:layout_constraintTop_toTopOf="@+id/textView20" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:id="@+id/crd_perigo_tarefa"
                style="@style/cartao">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/textView62"
                        style="@style/textoDetalhe"
                        android:layout_marginTop="8dp"
                        android:text="@string/tarefa_"
                        app:layout_constraintStart_toStartOf="@+id/textView60"
                        app:layout_constraintTop_toBottomOf="@+id/textView60" />

                    <TextView
                        android:id="@+id/textView21"
                        style="@style/tituloCartao"
                        android:text="@string/perigo_tarefa"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>


                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/textView21"
                        app:layout_constraintTop_toBottomOf="@+id/textView62" />

                    <TextView
                        android:id="@+id/textView60"
                        style="@style/textoDetalhe"
                        android:text="@string/perigo_"
                        android:layout_marginTop="@dimen/distancia_vertical_titulo"
                        app:layout_constraintStart_toStartOf="@+id/textView21"
                        app:layout_constraintTop_toBottomOf="@+id/textView21" />

                    <TextView
                        android:id="@+id/textView61"
                        style="@style/textoDetalhe"
                        android:layout_marginStart="16dp"
                        android:text="TextView"
                        app:layout_constraintStart_toEndOf="@+id/textView60"
                        app:layout_constraintTop_toTopOf="@+id/textView60" />

                    <TextView
                        android:id="@+id/textView63"
                        style="@style/textoDetalhe"
                        android:layout_marginStart="16dp"
                        android:text="TextView"
                        app:layout_constraintStart_toEndOf="@+id/textView62"
                        app:layout_constraintTop_toTopOf="@+id/textView62" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>




            <androidx.cardview.widget.CardView
                android:id="@+id/crd_categorias_profissionais"
                style="@style/cartao">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <TextView
                        android:id="@+id/textView22"
                        style="@style/tituloCartao"
                        android:text="@string/categorias_profissionais"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>


                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/textView22"
                        app:layout_constraintTop_toBottomOf="@+id/textView64" />

                    <TextView
                        android:id="@+id/textView64"
                        style="@style/textoDetalhe"
                        android:text="@string/categorias_profissionais"
                        android:layout_marginTop="@dimen/distancia_vertical_titulo"
                        app:layout_constraintStart_toStartOf="@+id/textView22"
                        app:layout_constraintTop_toBottomOf="@+id/textView22" />




                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>





            <androidx.cardview.widget.CardView
                android:id="@+id/crd_riscos"
                style="@style/cartao">



                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/textView25"
                        style="@style/tituloCartao"
                        android:text="@string/riscos"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>


                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip4"
                        android:layout_marginTop="@dimen/distancia_vertical_titulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/textView25"
                        app:layout_constraintTop_toBottomOf="@+id/textView25" />



                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>





        </LinearLayout>


        <com.github.clans.fab.FloatingActionMenu
            android:id="@+id/fab_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            app:menu_fab_size="normal"
            app:menu_showShadow="true"
            app:menu_shadowColor="#66000000"
            app:menu_shadowRadius="4dp"
            app:menu_shadowXOffset="1dp"
            app:menu_shadowYOffset="3dp"
            app:menu_colorNormal="#DA4336"
            app:menu_colorPressed="#E75043"
            app:menu_colorRipple="#99FFFFFF"
            app:menu_animationDelayPerItem="50"
            app:menu_icon="@drawable/ic_add_24dp"
            app:menu_buttonSpacing="0dp"
            app:menu_labels_margin="0dp"
            app:menu_labels_paddingTop="4dp"
            app:menu_labels_paddingRight="8dp"
            app:menu_labels_paddingBottom="4dp"
            app:menu_labels_paddingLeft="8dp"
            app:menu_labels_padding="8dp"
            app:menu_labels_textColor="#FFFFFF"
            app:menu_labels_textSize="14sp"
            app:menu_labels_cornerRadius="3dp"
            app:menu_labels_colorNormal="#333333"
            app:menu_labels_colorPressed="#444444"
            app:menu_labels_colorRipple="#66FFFFFF"
            app:menu_labels_showShadow="true"
            app:menu_labels_singleLine="false"
            app:menu_labels_ellipsize="none"
            app:menu_labels_maxLines="-1"
            app:menu_labels_style="@style/textoDetalhe"
            app:menu_labels_position="left"
            app:menu_openDirection="up"
            app:menu_backgroundColor="@android:color/transparent">


            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fab_adicionar_levantamento"
                android:enabled="@{bloquear}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_relatorio"
                app:fab_size="mini"
                app:fab_label="@string/adicionar_avalicao_riscos" />
            <!--
                        <com.github.clans.fab.FloatingActionButton
                            android:id="@+id/fab_adicionar_acao_formacao"
                            android:enabled="@{bloquear}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_acao_formacao"
                            app:fab_size="mini"
                            app:fab_label="@string/acao_formacao" />
            -->
        </com.github.clans.fab.FloatingActionMenu>




    </androidx.coordinatorlayout.widget.CoordinatorLayout>








</layout>


