<?xml version="1.0" encoding="utf-8"?>



<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <data>
        <import type="android.view.View"/>
        <!--
        <import type="android.view.View"/>
        <import type="java.util.List"/>




        <variable name="activity" type="com.vvm.sh.ui.transferencias.atualizacaoApp.AtualizacaoAppActivity" />

        <variable
            name="viewmodel"
            type="com.vvm.sh.ui.opcoes.OpcoesViewModel"/>
            -->

        <variable
            name="viewmodel"
            type="com.vvm.sh.ui.transferencias.TransferenciasViewModel"/>

        <variable
            name="comunicado"
            type="com.vvm.sh.util.AtualizacaoUI.Comunicado"/>

        <variable name="tipo" type="Integer" />



        <variable
            name="atualizacaoTipos"
            type="com.vvm.sh.util.AtualizacaoUI_"/>

        <variable
            name="atualizacaoActivPlaneaveis"
            type="com.vvm.sh.util.AtualizacaoUI_"/>

        <variable
            name="atualizacaoTemplates"
            type="com.vvm.sh.util.AtualizacaoUI_"/>

        <variable
            name="atualizacaoTrabalho"
            type="com.vvm.sh.util.AtualizacaoUI_"/>

        <variable
            name="atualizacaoChecklist"
            type="com.vvm.sh.util.AtualizacaoUI_"/>



    </data>




    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lnr_lyt_tipos"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/txt_titulo"
                style="@style/titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/a_atualizar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_detalhe"
                style="@style/textoDetalhe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/por_favor_aguarde"
                app:layout_constraintStart_toStartOf="@+id/txt_titulo"
                app:layout_constraintTop_toBottomOf="@+id/txt_titulo" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/carregamento_tipos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/txt_titulo"
                app:layout_constraintTop_toBottomOf="@+id/txt_detalhe">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ProgressBar
                        android:id="@+id/progressBar_tipo"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:elevation="0dp"
                        android:visibility="@{atualizacaoTipos.loading == true ? View.VISIBLE : View.INVISIBLE, default = visible}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <ImageView
                        android:id="@+id/img_completude_tipo"
                        imageResource="@{atualizacaoTipos.icon}"
                        tintCor="@{atualizacaoTipos.corIcon}"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:visibility="@{atualizacaoTipos.loading == true ? View.INVISIBLE : View.VISIBLE}"
                        app:layout_constraintBottom_toBottomOf="@+id/progressBar_tipo"
                        app:layout_constraintEnd_toEndOf="@+id/progressBar_tipo"
                        app:layout_constraintStart_toStartOf="@+id/progressBar_tipo"
                        app:layout_constraintTop_toTopOf="@+id/progressBar_tipo" />

                    <!--
                    android:imagemDrawable="@{atualizacaoTipos.icon}"
                    android:tintCor="@{atualizacaoTipos.corIcon}"-->

                    <TextView
                        android:id="@+id/txt_titulo_tipo"
                        style="@style/tituloCartao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:gravity="center_horizontal"
                        android:text="@string/tipos"
                        app:layout_constraintStart_toEndOf="@+id/progressBar_tipo"
                        app:layout_constraintTop_toTopOf="@+id/progressBar_tipo" />


                    <TextView
                        android:id="@+id/txt_descricao_tipo"
                        style="@style/textoDetalhe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_horizontal"
                        android:text="@{atualizacaoTipos.mensagem, default = @string/por_favor_aguarde}"
                        app:layout_constraintBottom_toBottomOf="@+id/progressBar_tipo"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/txt_titulo_tipo"
                        app:layout_constraintTop_toBottomOf="@+id/txt_titulo_tipo" />


                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">

                    <ProgressBar
                        android:id="@+id/progressBar_activ_planeaveis"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:elevation="0dp"
                        android:visibility="@{atualizacaoActivPlaneaveis.loading == true ? View.VISIBLE : View.INVISIBLE}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <ImageView
                        android:id="@+id/img_completude_activ_planeaveis"
                        imageResource="@{atualizacaoActivPlaneaveis.icon}"
                        tintCor="@{atualizacaoActivPlaneaveis.corIcon}"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:visibility="@{atualizacaoActivPlaneaveis.loading == true ? View.INVISIBLE : View.VISIBLE}"
                        app:layout_constraintBottom_toBottomOf="@+id/progressBar_activ_planeaveis"
                        app:layout_constraintEnd_toEndOf="@+id/progressBar_activ_planeaveis"
                        app:layout_constraintStart_toStartOf="@+id/progressBar_activ_planeaveis"
                        app:layout_constraintTop_toTopOf="@+id/progressBar_activ_planeaveis" />


                    <!--
                    android:imagemDrawable="@{atualizacaoActivPlaneaveis.icon}"
                    android:tintCor="@{atualizacaoActivPlaneaveis.corIcon}"-->

                    <TextView
                        android:id="@+id/txt_titulo_activ_planeaveis"
                        style="@style/tituloCartao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:gravity="center_horizontal"
                        android:text="@string/atividades_planeaveis"
                        app:layout_constraintStart_toEndOf="@+id/progressBar_activ_planeaveis"
                        app:layout_constraintTop_toTopOf="@+id/progressBar_activ_planeaveis" />


                    <TextView
                        android:id="@+id/txt_descricao_activ_planeaveis"
                        style="@style/textoDetalhe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_horizontal"
                        android:text="@{atualizacaoActivPlaneaveis.mensagem, default = @string/por_favor_aguarde}"
                        app:layout_constraintBottom_toBottomOf="@+id/progressBar_activ_planeaveis"

                        app:layout_constraintStart_toStartOf="@+id/txt_titulo_activ_planeaveis"
                        app:layout_constraintTop_toBottomOf="@+id/txt_titulo_activ_planeaveis" />


                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout3">

                    <ProgressBar
                        android:id="@+id/progressBar_templates"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:elevation="0dp"
                        android:visibility="@{atualizacaoTemplates.loading == true ? View.VISIBLE : View.INVISIBLE}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <ImageView
                        android:id="@+id/img_completude_templates"
                        imageResource="@{atualizacaoTemplates.icon}"
                        tintCor="@{atualizacaoTemplates.corIcon}"
                        android:layout_width="24dp"
                        android:layout_height="24dp"

                        android:visibility="@{atualizacaoTemplates.loading == true ? View.INVISIBLE : View.VISIBLE}"

                        app:layout_constraintBottom_toBottomOf="@+id/progressBar_templates"
                        app:layout_constraintEnd_toEndOf="@+id/progressBar_templates"
                        app:layout_constraintStart_toStartOf="@+id/progressBar_templates"
                        app:layout_constraintTop_toTopOf="@+id/progressBar_templates" />


                    <!--
                    android:imagemDrawable="@{atualizacaoTemplates.icon}"
                    android:tintCor="@{atualizacaoTemplates.corIcon}"-->

                    <TextView
                        android:id="@+id/txt_titulo_templates"
                        style="@style/tituloCartao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:gravity="center_horizontal"
                        android:text="@string/templates_avaliacao_riscos"
                        app:layout_constraintStart_toEndOf="@+id/progressBar_templates"
                        app:layout_constraintTop_toTopOf="@+id/progressBar_templates" />


                    <TextView
                        android:id="@+id/txt_descricao_templates"
                        style="@style/textoDetalhe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_horizontal"
                        android:text="@{atualizacaoTemplates.mensagem, default = @string/por_favor_aguarde}"
                        app:layout_constraintBottom_toBottomOf="@+id/progressBar_templates"
                        app:layout_constraintStart_toStartOf="@+id/txt_titulo_templates"
                        app:layout_constraintTop_toBottomOf="@+id/txt_titulo_templates" />


                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout4">

                    <ProgressBar
                        android:id="@+id/progressBar_checklist"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:elevation="0dp"
                        android:visibility="@{atualizacaoChecklist.loading == true ? View.VISIBLE : View.INVISIBLE}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <ImageView
                        android:id="@+id/img_completude_checklist"
                        imageResource="@{atualizacaoChecklist.icon}"
                        tintCor="@{atualizacaoChecklist.corIcon}"
                        android:layout_width="24dp"
                        android:layout_height="24dp"

                        android:visibility="@{atualizacaoChecklist.loading == true ? View.INVISIBLE : View.VISIBLE}"
                        app:layout_constraintBottom_toBottomOf="@+id/progressBar_checklist"
                        app:layout_constraintEnd_toEndOf="@+id/progressBar_checklist"
                        app:layout_constraintStart_toStartOf="@+id/progressBar_checklist"
                        app:layout_constraintTop_toTopOf="@+id/progressBar_checklist" />


                    <!--
                    android:imagemDrawable="@{atualizacaoTemplates.icon}"
                    android:tintCor="@{atualizacaoTemplates.corIcon}"-->

                    <TextView
                        android:id="@+id/txt_titulo_checklist"
                        style="@style/tituloCartao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:gravity="center_horizontal"
                        android:text="@string/checklists"
                        app:layout_constraintStart_toEndOf="@+id/progressBar_checklist"
                        app:layout_constraintTop_toTopOf="@+id/progressBar_checklist" />


                    <TextView
                        android:id="@+id/txt_descricao_checklist"
                        style="@style/textoDetalhe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_horizontal"
                        android:text="@{atualizacaoChecklist.mensagem, default = @string/por_favor_aguarde}"
                        app:layout_constraintBottom_toBottomOf="@+id/progressBar_checklist"
                        app:layout_constraintStart_toStartOf="@+id/txt_titulo_checklist"
                        app:layout_constraintTop_toBottomOf="@+id/txt_titulo_checklist" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/txt_titulo"
                app:layout_constraintTop_toBottomOf="@+id/carregamento_tipos">

                <ProgressBar
                    android:id="@+id/progressBar_trabalho"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:elevation="0dp"
                    android:visibility="@{atualizacaoTrabalho.loading == true ? View.VISIBLE : View.INVISIBLE}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageView
                    android:id="@+id/img_completude_trabalho"
                    imageResource="@{atualizacaoTrabalho.icon}"
                    tintCor="@{atualizacaoTrabalho.corIcon}"
                    android:layout_width="24dp"
                    android:layout_height="24dp"

                    android:visibility="@{atualizacaoTrabalho.loading == true ? View.INVISIBLE : View.VISIBLE}"

                    app:layout_constraintBottom_toBottomOf="@+id/progressBar_trabalho"
                    app:layout_constraintEnd_toEndOf="@+id/progressBar_trabalho"
                    app:layout_constraintStart_toStartOf="@+id/progressBar_trabalho"
                    app:layout_constraintTop_toTopOf="@+id/progressBar_trabalho"/>


                <!--
                android:imagemDrawable="@{atualizacaoTemplates.icon}"
                android:tintCor="@{atualizacaoTemplates.corIcon}"-->

                <TextView
                    android:id="@+id/txt_titulo_trabalho"
                    style="@style/tituloCartao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:gravity="center_horizontal"
                    android:text="@string/download_trabalho"
                    app:layout_constraintStart_toEndOf="@+id/progressBar_trabalho"
                    app:layout_constraintTop_toTopOf="@+id/progressBar_trabalho" />


                <TextView
                    android:id="@+id/txt_descricao_trabalho"
                    style="@style/textoDetalhe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_horizontal"
                    android:text="@{atualizacaoTrabalho.mensagem, default = @string/por_favor_aguarde}"
                    app:layout_constraintBottom_toBottomOf="@+id/progressBar_trabalho"
                    app:layout_constraintStart_toStartOf="@+id/txt_titulo_trabalho"
                    app:layout_constraintTop_toBottomOf="@+id/txt_titulo_trabalho" />


            </androidx.constraintlayout.widget.ConstraintLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>





        </androidx.constraintlayout.widget.ConstraintLayout>




</layout>

