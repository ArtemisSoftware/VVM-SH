    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="84dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/lorem_ipsum_banner" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView">


            <TextView
                android:id="@+id/textView7"
                style="@style/titulo"
                android:text="@string/download_trabalho_dia_"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView8"
                style="@style/titulo"
                android:layout_marginStart="16dp"
                android:text="TextView"
                app:layout_constraintBottom_toBottomOf="@+id/textView7"
                app:layout_constraintStart_toEndOf="@+id/textView7"
                app:layout_constraintTop_toTopOf="@+id/textView7" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lnr_lyt_progresso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

            <ProgressBar
                android:id="@+id/progressBar_progresso"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="0"
                app:layout_constraintBottom_toTopOf="@+id/button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.19999999" />

            <TextView
                android:id="@+id/txt_titulo_progresso"
                style="@style/textoDetalhe"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="64dp"
                app:layout_constraintBottom_toTopOf="@+id/button"
                app:layout_constraintStart_toStartOf="@+id/progressBar_progresso"
                app:layout_constraintTop_toBottomOf="@+id/progressBar_progresso"
                app:layout_constraintVertical_bias="0.07999998" />

            <TextView
                android:id="@+id/txt_progresso"
                style="@style/textoDetalhe"
                app:layout_constraintEnd_toEndOf="@+id/progressBar_progresso"
                app:layout_constraintTop_toTopOf="@+id/txt_titulo_progresso" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/lnr_lyt_progresso">

            <ProgressBar
                android:id="@+id/progressBar_progresso_"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="0"
                app:layout_constraintBottom_toTopOf="@+id/button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.19999999" />

            <TextView
                android:id="@+id/txt_titulo_progresso_"
                style="@style/textoDetalhe"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="64dp"
                app:layout_constraintBottom_toTopOf="@+id/button"
                app:layout_constraintStart_toStartOf="@+id/progressBar_progresso_"
                app:layout_constraintTop_toBottomOf="@+id/progressBar_progresso_"
                app:layout_constraintVertical_bias="0.07999998" />

            <TextView
                android:id="@+id/txt_progresso_"
                style="@style/textoDetalhe"
                app:layout_constraintEnd_toEndOf="@+id/progressBar_progresso_"
                app:layout_constraintTop_toTopOf="@+id/txt_titulo_progresso_" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <Button
            android:id="@+id/btn_terminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:background="@drawable/onboarding_button"
            android:text="@string/terminar"
            android:textColor="@color/whiteTextColor"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>






