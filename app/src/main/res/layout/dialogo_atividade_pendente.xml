<?xml version="1.0" encoding="utf-8"?>



<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>


    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">


        <RadioGroup
            android:id="@+id/rd_gp_concluir_actividade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RadioButton
                android:id="@+id/rd_btn_actividade_executada"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="@string/concluir_atividade_executada"/>

            <RadioButton
                android:id="@+id/rd_btn_actividade_nao_executada"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="@string/concluir_atividade_nao_executada" />


            <RadioButton
                android:id="@+id/rd_btn_relatorio"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="@string/relatorio" />

            <RadioButton
                android:id="@+id/rd_btn_detalhe"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="@string/detalhe" />


        </RadioGroup>

    </LinearLayout>


</layout>