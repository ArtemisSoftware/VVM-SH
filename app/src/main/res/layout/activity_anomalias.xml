<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <!--
                <import type="java.util.List"/>


-->

        <variable
            name="viewmodel"
            type="com.vvm.sh.ui.anomalias.AnomaliasViewModel"/>



    </data>



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_centerHorizontal="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/textview"
                        style="@style/titulo"
                        android:text="@string/anomalias"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>


                    <View
                        android:id="@+id/textview2"
                        android:layout_width="280dp"
                        android:layout_height="0.2dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/cor_separador"
                        app:layout_constraintStart_toStartOf="@+id/textview"
                        app:layout_constraintTop_toBottomOf="@+id/textview" />


                    <com.jaredrummler.materialspinner.MaterialSpinner
                        android:id="@+id/spnr_estado"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textview2"
                        tipos_="@{viewmodel.estados}"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/textview"
                        app:layout_constraintTop_toBottomOf="@+id/textview2"/>



                </androidx.constraintlayout.widget.ConstraintLayout>



                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView_existentes"
                    style="@style/lista"
                    anomalias="@{viewmodel.anomalias}"
                    tools:listitem="@layout/item_anomalia"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView_registados"
                    android:visibility="gone"
                    style="@style/lista"
                    anomalias="@{viewmodel.anomaliasResultados}"
                    tools:listitem="@layout/item_anomalia"/>


                <!-- tarefas="@{viewmodel.tarefas}"
                    app:onItemClick="@{listener}" -->

            </LinearLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_adicionar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_24dp"
                android:layout_gravity="bottom|end"
                app:elevation="6dp"
                android:layout_margin="@dimen/fab_margin"
                app:pressedTranslationZ="12dp"/>
    </FrameLayout>
</layout>
