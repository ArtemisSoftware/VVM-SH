<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:layout_centerInParent="true"
        android:src="@drawable/lorem_ipsum_banner" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="26dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_titulo"
            style="@style/onBoardingHeaderText"
            android:text="@string/lorem_ipsum_titulo" />

        <TextView
            android:id="@+id/txt_texto"
            style="@style/onBoardingContentText"
            android:text="@string/lorem_ipsum_texto" />

    </LinearLayout>

</RelativeLayout>


