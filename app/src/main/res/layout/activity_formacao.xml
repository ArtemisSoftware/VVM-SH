<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="java.util.List"/>
        <import type="android.view.View"/>

        <variable
            name="viewmodel"
            type="com.vvm.sh.ui.ocorrencias.OcorrenciasViewModel"/>

        <variable
            name="listener"
            type="com.vvm.sh.ui.ocorrencias.adaptadores.OnOcorrenciaRegistoListener"/>

    </data>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/textview"
                style="@style/titulo"
                android:text="@string/formacao"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


            <View
                android:id="@+id/textview2"
                android:layout_width="280dp"
                android:layout_height="0.2dp"
                android:layout_marginTop="8dp"
                android:background="@color/cor_separador"
                app:layout_constraintStart_toStartOf="@+id/textview"
                app:layout_constraintTop_toBottomOf="@+id/textview" />

            <TextView
                android:id="@+id/txt_estado"
                style="@style/textoNota"
                android:text="@string/lorem_ipsum_texto_pequeno"
                android:layout_below="@+id/textview2"
                android:layout_alignParentRight="true"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintStart_toStartOf="@+id/textview"
                app:layout_constraintTop_toBottomOf="@+id/textview2" />



            <androidx.cardview.widget.CardView
                style="@style/cartao"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_estado"
                app:layout_constraintStart_toStartOf="@+id/textview">

                <!-- android:onClick="@{() -> listener.showNoteDialog(note) }" -->


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/textView20"
                        style="@style/tituloCartao"
                        android:text="@string/acao_formacao"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView21"
                        style="@style/subTituloDescritivo"
                        android:layout_marginTop="16dp"
                        android:text="@string/designacao_"
                        app:layout_constraintStart_toStartOf="@+id/textView20"
                        app:layout_constraintTop_toBottomOf="@+id/textView20" />

                    <TextView
                        android:id="@+id/textView22"
                        style="@style/subTituloDescritivo"
                        android:layout_marginStart="16dp"
                        android:text="TextView"
                        app:layout_constraintStart_toEndOf="@+id/textView21"
                        app:layout_constraintTop_toTopOf="@+id/textView21" />

                    <TextView
                        android:id="@+id/textView23"
                        style="@style/subTituloDescritivo"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp"
                        android:text="@string/local_"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/textView20"
                        app:layout_constraintTop_toBottomOf="@+id/textView21" />

                    <TextView
                        android:id="@+id/textView24"
                        style="@style/subTituloDescritivo"
                        android:layout_marginStart="16dp"
                        android:text="TextView"
                        app:layout_constraintStart_toEndOf="@+id/textView23"
                        app:layout_constraintTop_toTopOf="@+id/textView23" />
                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>



        </androidx.constraintlayout.widget.ConstraintLayout>



        <!-- ..............lista............... -->

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcl_registos"
            style="@style/lista"

            tools:listitem="@layout/item_formando"/>

        <!--
        registosOcorrencias="@{viewmodel.ocorrenciasRegistos}"
            onItemClick="@{listener}"

             -->

    </LinearLayout>

</layout>


