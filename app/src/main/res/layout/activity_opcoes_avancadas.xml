<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.contaUtilizador.OpcoesAvancadasActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/contentBodyColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            style="@style/viewParent.headerText"
            android:text="@string/opcoes_avancadas" />




        <TextView
            style="@style/viewParent.headerText.settingsMiniTitle"
            android:text="Log"/>


        <View
            android:layout_width="300dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="1dp"
            android:background="#c0c0c0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:orientation="horizontal"
            android:background="#fff"
            android:outlineProvider="bounds"
            android:layout_marginTop="10dp"
            android:elevation="0.2dp"
            android:padding="10dp"
            android:gravity="center_vertical">

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="@string/lorem_ipsum_texto_pequeno"
                />
        </LinearLayout>



        <TextView
            style="@style/viewParent.headerText.settingsMiniTitle"
            android:text="Tipos"/>

        <View
            android:layout_width="300dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="1dp"
            android:background="#c0c0c0"/>

        <LinearLayout
            android:id="@+id/lnr_lyt_tipos"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:orientation="horizontal"
            android:background="#fff"
            android:outlineProvider="bounds"
            android:layout_marginTop="10dp"
            android:elevation="0.2dp"
            android:padding="10dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Gerir tipos"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/ic_lorem_ipsum_24dp"/>
        </LinearLayout>



        <TextView
            style="@style/viewParent.headerText.settingsMiniTitle"
            android:text="Dados"/>

        <View
            android:layout_width="300dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="1dp"
            android:background="#c0c0c0"/>


        <LinearLayout
            android:id="@+id/lnr_lyt_exportar_bd"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:background="#fff"
            android:elevation="0.2dp"
            android:padding="10dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Exportar base dados"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/ic_lorem_ipsum_24dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="#fff"
            android:elevation="0.2dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Importar base dados"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/ic_lorem_ipsum_24dp"/>
        </LinearLayout>


        <TextView
            style="@style/viewParent.headerText.settingsMiniTitle"
            android:text="Teste"/>


        <View
            android:layout_width="300dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="1dp"
            android:background="#c0c0c0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:orientation="horizontal"
            android:background="#fff"
            android:elevation="0.2dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Email"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/ic_lorem_ipsum_24dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:orientation="horizontal"
            android:background="#fff"
            android:elevation="0.2dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Pdf"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/ic_lorem_ipsum_24dp"/>
        </LinearLayout>


    </LinearLayout>
</ScrollView>