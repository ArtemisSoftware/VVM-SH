<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="java.util.List"/>

        <variable
            name="listener"
            type="com.vvm.sh.ui.ocorrencias.adaptadores.OnOcorrenciaListener"/>

        <variable
            name="viewmodel"
            type="com.vvm.sh.ui.ocorrencias.OcorrenciasViewModel"/>

    </data>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_centerHorizontal="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/textview"
                    style="@style/titulo"
                    android:text="@string/ocorrencias"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>


                <View
                    android:id="@+id/textview2"
                    android:layout_width="280dp"
                    android:layout_height="0.2dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/cor_separador"
                    app:layout_constraintStart_toStartOf="@+id/textview"
                    app:layout_constraintTop_toBottomOf="@+id/textview" />

                <TextView
                    android:id="@+id/txt_estado"
                    style="@style/textoNota"
                    android:text="@string/lorem_ipsum_texto_pequeno"
                    android:layout_below="@+id/textview2"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/textview"
                    app:layout_constraintTop_toBottomOf="@+id/textview2" />


            </androidx.constraintlayout.widget.ConstraintLayout>



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcl_registos"
                style="@style/lista"
                ocorrencias="@{viewmodel.ocorrencias}"
                listener="@{listener}"
                tools:listitem="@layout/item_ocorrencia"/>
            <!--
                 -->

        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_adicionar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_24dp"
            android:layout_gravity="bottom|end"
            app:elevation="6dp"
            android:layout_margin="@dimen/fab_margin"
            app:pressedTranslationZ="12dp"/>
    </FrameLayout>
</layout>

