<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <import type="com.vvm.sh.util.metodos.StringUtil"/>

        <variable
            name="viewmodel"
            type="com.vvm.sh.ui.transferencias.TransferenciasViewModel"/>


        <variable
            name="atualizacaoTipos"
            type="com.vvm.sh.util.AtualizacaoUI_"/>

        <variable
            name="atualizacaoActivPlaneaveis"
            type="com.vvm.sh.util.AtualizacaoUI_"/>

        <variable
            name="atualizacaoTemplates"
            type="com.vvm.sh.util.AtualizacaoUI_"/>

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lnr_lyt_tipos"
            android:layout_width="400dp"
            android:layout_height="400dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/txt_titulo"
                style="@style/titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/a_atualizar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_detalhe"
                style="@style/textoDetalhe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/por_favor_aguarde"
                app:layout_constraintStart_toStartOf="@+id/txt_titulo"
                app:layout_constraintTop_toBottomOf="@+id/txt_titulo" />




            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="@+id/txt_titulo"
                app:layout_constraintTop_toBottomOf="@+id/txt_detalhe">

                <ProgressBar
                    android:id="@+id/progressBar_tipo"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:elevation="0dp"
                    android:visibility="@{atualizacaoTipos.loading == true ? View.VISIBLE : View.INVISIBLE, default = visible}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageView
                    android:id="@+id/img_completude_tipo"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:imagem="@{atualizacaoTipos.icon}"
                    android:tintCor="@{atualizacaoTipos.corIcon}"
                    android:visibility="@{atualizacaoTipos.loading == true ? View.INVISIBLE : View.VISIBLE}"
                    app:layout_constraintStart_toStartOf="@+id/progressBar_tipo"
                    app:layout_constraintTop_toTopOf="@+id/progressBar_tipo" />


                <TextView
                    android:id="@+id/txt_titulo_tipo"
                    style="@style/tituloCartao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:gravity="center_horizontal"
                    android:text="@string/tipos"
                    app:layout_constraintStart_toEndOf="@+id/progressBar_tipo"
                    app:layout_constraintTop_toTopOf="@+id/progressBar_tipo" />


                <TextView
                    android:id="@+id/txt_descricao_tipo"
                    style="@style/textoDetalhe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_horizontal"
                    android:text="@{atualizacaoTipos.mensagem, default = @string/por_favor_aguarde}"
                    app:layout_constraintBottom_toBottomOf="@+id/progressBar_tipo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/txt_titulo_tipo"
                    app:layout_constraintTop_toBottomOf="@+id/txt_titulo_tipo" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="@+id/txt_titulo"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">

                <ProgressBar
                    android:id="@+id/progressBar_activ_planeaveis"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:elevation="0dp"
                    android:visibility="@{atualizacaoActivPlaneaveis.loading == true ? View.VISIBLE : View.INVISIBLE}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageView
                    android:id="@+id/img_completude_activ_planeaveis"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:imagem="@{atualizacaoActivPlaneaveis.icon}"
                    android:tintCor="@{atualizacaoActivPlaneaveis.corIcon}"
                    android:visibility="@{atualizacaoActivPlaneaveis.loading == true ? View.INVISIBLE : View.VISIBLE}"
                    app:layout_constraintStart_toStartOf="@+id/progressBar_activ_planeaveis"
                    app:layout_constraintTop_toTopOf="@+id/progressBar_activ_planeaveis" />


                <TextView
                    android:id="@+id/txt_titulo_activ_planeaveis"
                    style="@style/tituloCartao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:gravity="center_horizontal"
                    android:text="@string/atividades_planeaveis"
                    app:layout_constraintStart_toEndOf="@+id/progressBar_activ_planeaveis"
                    app:layout_constraintTop_toTopOf="@+id/progressBar_activ_planeaveis" />


                <TextView
                    android:id="@+id/txt_descricao_activ_planeaveis"
                    style="@style/textoDetalhe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_horizontal"
                    android:text="@{atualizacaoActivPlaneaveis.mensagem, default = @string/por_favor_aguarde}"
                    app:layout_constraintBottom_toBottomOf="@+id/progressBar_activ_planeaveis"

                    app:layout_constraintStart_toStartOf="@+id/txt_titulo_activ_planeaveis"
                    app:layout_constraintTop_toBottomOf="@+id/txt_titulo_activ_planeaveis" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="@+id/txt_titulo"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout3">

                <ProgressBar
                    android:id="@+id/progressBar_templates"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:elevation="0dp"
                    android:visibility="@{atualizacaoTemplates.loading == true ? View.VISIBLE : View.INVISIBLE}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageView
                    android:id="@+id/img_completude_templates"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:imagem="@{atualizacaoTemplates.icon}"
                    android:tintCor="@{atualizacaoTemplates.corIcon}"
                    android:visibility="@{atualizacaoTemplates.loading == true ? View.INVISIBLE : View.VISIBLE}"
                    app:layout_constraintStart_toStartOf="@+id/progressBar_templates"
                    app:layout_constraintTop_toTopOf="@+id/progressBar_templates" />


                <TextView
                    android:id="@+id/txt_titulo_templates"
                    style="@style/tituloCartao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:gravity="center_horizontal"
                    android:text="@string/templates_avaliacao_riscos"
                    app:layout_constraintStart_toEndOf="@+id/progressBar_templates"
                    app:layout_constraintTop_toTopOf="@+id/progressBar_templates" />


                <TextView
                    android:id="@+id/txt_descricao_templates"
                    style="@style/textoDetalhe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_horizontal"
                    android:text="@{atualizacaoTemplates.mensagem, default = @string/por_favor_aguarde}"
                    app:layout_constraintBottom_toBottomOf="@+id/progressBar_templates"
                    app:layout_constraintStart_toStartOf="@+id/txt_titulo_templates"
                    app:layout_constraintTop_toBottomOf="@+id/txt_titulo_templates" />


            </androidx.constraintlayout.widget.ConstraintLayout>




        </androidx.constraintlayout.widget.ConstraintLayout>








        <TextView
            android:id="@+id/txt_sub_titulo"
            style="@style/textoDetalhe"
            android:visibility="invisible"
            android:layout_marginEnd="24dp"
            android:text="@string/iniciar_app"
            app:layout_constraintBottom_toBottomOf="@+id/crl_prosseguir"
            app:layout_constraintEnd_toStartOf="@+id/crl_prosseguir"
            app:layout_constraintTop_toTopOf="@+id/crl_prosseguir" />


        <at.markushi.ui.CircleButton
            android:id="@+id/crl_prosseguir"
            style="@style/btnCircular"
            android:visibility="invisible"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"
            android:src="@drawable/ic_appintro_arrow"
            app:cb_color="@color/cor_btn_apresentacao"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>