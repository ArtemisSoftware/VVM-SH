<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <import type="com.vvm.sh.util.metodos.StringUtil"/>

        <variable
            name="viewmodel"
            type="com.vvm.sh.ui.transferencias.TransferenciasViewModel"/>


        <variable
            name="comunicado"
            type="com.vvm.sh.util.AtualizacaoUI.Comunicado"/>

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lnr_lyt_tipos"
            android:layout_width="400dp"
            android:layout_height="400dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/textView7"
                style="@style/titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/a_atualizar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView8"
                style="@style/textoDetalhe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/por_favor_aguarde"
                app:layout_constraintStart_toStartOf="@+id/textView7"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="@+id/textView7"
                app:layout_constraintTop_toBottomOf="@+id/textView8">

                <ProgressBar
                    android:id="@+id/progressBar_tipo"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:elevation="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageView
                    android:id="@+id/img_completude_tipo"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/ic_validado_branco"
                    android:tint="@color/bg_screen3"
                    app:layout_constraintStart_toStartOf="@+id/progressBar_tipo"
                    app:layout_constraintTop_toTopOf="@+id/progressBar_tipo" />


                <TextView
                    android:id="@+id/txt_titulo_tipo"
                    style="@style/tituloCartao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:gravity="center_horizontal"
                    android:text="@string/tipos"
                    app:layout_constraintStart_toEndOf="@+id/progressBar_tipo"
                    app:layout_constraintTop_toTopOf="@+id/progressBar_tipo" />


                <TextView
                    android:id="@+id/txt_descricao_tipo"
                    style="@style/textoDetalhe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_horizontal"
                    android:text="@string/por_favor_aguarde"
                    app:layout_constraintBottom_toBottomOf="@+id/progressBar_tipo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/txt_titulo_tipo"
                    app:layout_constraintTop_toBottomOf="@+id/txt_titulo_tipo" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>








        <TextView
            android:id="@+id/txt_sub_titulo"
            style="@style/textoDetalhe"
            android:visibility="invisible"
            android:layout_marginEnd="24dp"
            android:text="@string/iniciar_app"
            app:layout_constraintBottom_toBottomOf="@+id/crl_prosseguir"
            app:layout_constraintEnd_toStartOf="@+id/crl_prosseguir"
            app:layout_constraintTop_toTopOf="@+id/crl_prosseguir" />


        <at.markushi.ui.CircleButton
            android:id="@+id/crl_prosseguir"
            style="@style/btnCircular"
            android:visibility="invisible"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"
            android:src="@drawable/ic_appintro_arrow"
            app:cb_color="@color/cor_btn_apresentacao"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>